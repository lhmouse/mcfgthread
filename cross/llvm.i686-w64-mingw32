[binaries]
c = [ 'clang', '--target=i686-w64-mingw32' ]
c_ld = 'lld'
cpp = [ 'clang++', '--target=i686-w64-mingw32' ]
cpp_ld = 'lld'
ar = 'llvm-ar'
objcopy = [ 'llvm-objcopy', '--target=i686-w64-mingw32' ]
strip = 'llvm-strip'
windres = 'llvm-windres'
dlltool = [ 'llvm-dlltool', '-m', 'i386' ]

pkg-config = 'i686-w64-mingw32-pkg-config'
exe_wrapper = 'wine'

[host_machine]
system = 'windows'
cpu_family = 'i686'
cpu = 'i686'
endian = 'little'

[properties]
skip_sanity_check = true
