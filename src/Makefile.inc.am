  %reldir%/atomic.h  \
  %reldir%/fwd.h  \
  %reldir%/clock.h  \
  %reldir%/mutex.h  \
  %reldir%/cond.h  \
  %reldir%/once.h  \
  %reldir%/sem.h  \
  %reldir%/event.h  \
  %reldir%/thread.h  \
  %reldir%/cxa.h  \
  %reldir%/dtor_queue.h  \
  %reldir%/exit.h  \
  %reldir%/tls.h  \
  %reldir%/gthr_aux.h  \
  %reldir%/gthr.h  \
  %reldir%/c11.h  \
  ${END}

lib_LTLIBRARIES += lib/libmcfgthread.la
lib_libmcfgthread_la_SOURCES =  \
  %reldir%/version.h.in  \
  %reldir%/precompiled.i  \
  %reldir%/xasm.i  \
  %reldir%/xglobals.i  \
  %reldir%/xglobals.c  \
  %reldir%/memcpy.c  \
  %reldir%/memmove.c  \
  %reldir%/memcmp.c  \
  %reldir%/memset.c  \
  %reldir%/version.rc  \
  %reldir%/fwd.c  \
  %reldir%/clock.c  \
  %reldir%/mutex.c  \
  %reldir%/cond.c  \
  %reldir%/once.c  \
  %reldir%/sem.c  \
  %reldir%/event.c  \
  %reldir%/thread.c  \
  %reldir%/cxa.c  \
  %reldir%/dtor_queue.c  \
  %reldir%/exit.c  \
  %reldir%/tls.c  \
  %reldir%/gthr_aux.c  \
  %reldir%/gthr.c  \
  %reldir%/c11.c  \
  %reldir%/libkernel32_tiny.def  \
  %reldir%/libntdll_tiny.def  \
  ${END}

.rc.lo:
	${AM_V_GEN}${LIBTOOL} ${AM_V_lt} --tag=RC --mode=compile ${RC} ${DEFAULT_INCLUDES} ${AM_RCFLAGS} ${RCFLAGS} $< -o $@

BUILT_SOURCES += %reldir%/libkernel32_tiny.a %reldir%/libntdll_tiny.a
CLEANFILES += %reldir%/libkernel32_tiny.a %reldir%/libntdll_tiny.a

.def.a:
	${AM_V_GEN}${DLLTOOL} ${AM_DLLTOOLFLAGS} -k -d $< -l $@

lib_libmcfgthread_la_CFLAGS =  \
  ${AM_CFLAGS} -nostdlib -f{freestanding,unwind-tables}

lib_libmcfgthread_la_LDFLAGS =  \
  -Wc,-nostdlib,%reldir%/lib{kernel32,ntdll}_tiny.a  \
  -Wl,--subsystem,windows:6.1,--entry,__MCF_dll_startup@@Z  \
  -Wl,--exclude-all-symbols,--kill-at,--enable-auto-image-base  \
  -no-undefined -version-info @abi_major@:@abi_minor@

if enable_pch
lib_libmcfgthread_la_CFLAGS += -include %reldir%/precompiled.xi
BUILT_SOURCES += %reldir%/precompiled.xi
endif

%.xi: %.i %reldir%/version.h config.h
	${AM_V_CC}${LTCOMPILE} -ffreestanding -x c-header -Wno-error $< -o $@.o  \
	  && rm -rf $@.gch  \
	  && mkdir $@.gch  \
	  && . $@.lo  \
	  && (test "$${pic_object}" == none || mv -f %reldir%/$${pic_object} $@.gch/pic)  \
	  && (test "$${non_pic_object}" == none || mv -f %reldir%/$${non_pic_object} $@.gch/non_pic)  \
	  && rm -f $@.lo  \
	  && echo '#error PCH unusable' > $@

clean-local:
	-rm -rf %reldir%/precompiled.x*
